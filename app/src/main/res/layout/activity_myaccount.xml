<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.kotlinhelloworld.com.kotlinestart.myaccount">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableLayout
            android:layout_marginTop="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dip"
                    android:text="My account" />
                <TextView
                    android:id="@+id/myaccountinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dip"
                    android:text="" />
            </TableRow>
            <TableRow>
                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dip"
                    android:text="" />
                <Button
                    android:id="@+id/takepic_camera"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Take Picture From Camera" />

            </TableRow>

            <TableRow>
                <ImageView
                    android:id="@+id/img_view_nxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dip"
                    android:text="" />
                <Button
                    android:id="@+id/takepic_gallery"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Take Picture From Gallery" />
            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/userreq"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text=""/>
                <Button
                    android:id="@+id/sendreq"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Send Requirement" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/activity_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_span="2"
                    android:padding="10dip"
                    android:text="test" />
            </TableRow>
        </TableLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
